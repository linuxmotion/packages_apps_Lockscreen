<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ss="http://schemas.android.com/apk/res/com.android.security.lockscreen"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    
    <LinearLayout 
				android:layout_alignParentTop="true"
	 			android:orientation="horizontal"
				android:layout_width="fill_parent"
	  			android:layout_height="fill_parent"
	  			android:layout_marginTop="5dip"
	  			android:gravity="center_horizontal"
	  			>
  			 <com.android.internal.widget.ImageNotificationView
			  	android:id="@+id/notification_image_view1"
			  	android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    ss:notificationimage="@drawable/lock_ic_notifications_btn_battery"
			    ss:textSize="25" />
			    
			    <com.android.internal.widget.ImageNotificationView
			  	android:id="@+id/notification_image_view2"
			  	android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    ss:notificationimage="@drawable/lock_ic_notifications_btn_phone"
			    ss:textSize="25" />
			    
			    <com.android.internal.widget.ImageNotificationView
			  	android:id="@+id/notification_image_view3"
			  	android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    ss:notificationimage="@drawable/lock_ic_notifications_btn_text" 
			    ss:textSize="25"/>
			    
			    <com.android.internal.widget.ImageNotificationView
			  	android:id="@+id/notification_image_view4"
			  	android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    ss:notificationimage="@drawable/lock_ic_notifications_btn_gmail" 
			    ss:textSize="25"/>
		
			
  
					 
	</LinearLayout>
    
</merge>
